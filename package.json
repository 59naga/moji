{
  "name": "moji",
  "version": "1.0.0",
  "description": "半角全角変換・特定文字抽出など日本語を便利に扱うJavaScriptライブラリ。",
  "main": "src/moji.js",
  "scripts": {
    "test": "mocha",
    "karma": "karma start",
    "watchify": "watchify -e src/moji.js -o dist/moji.js -v",
    "build:browser": "browserify src/moji.js -o dist/moji.standalone.js -s moji",
    "build:node": "browserify -e src/moji.js -o dist/moji.js",
    "build": "npm run build:browser && npm run build:node"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/niwaringo/moji"
  },
  "keywords": [
    "半角",
    "全角",
    "カタカナ",
    "半角カナ",
    "変換"
  ],
  "author": "@niwaringo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/niwaringo/mojic/issues"
  },
  "homepage": "https://github.com/niwaringo/moji",
  "devDependencies": {
    "babel-preset-env": "^1.4.0",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "karma": "^1.6.0",
    "karma-browserify": "^5.1.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-sauce-launcher": "^1.1.0",
    "mocha": "^3.2.0",
    "watchify": "^3.9.0"
  },
  "dependencies": {},
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "comments": false
        }
      ]
    ]
  }
}
